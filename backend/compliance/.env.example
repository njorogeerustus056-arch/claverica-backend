# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.render.com

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# For local development
# DATABASE_URL=postgresql://localhost:5432/claverica_db

# Email Configuration (for TAC codes)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@claverica.com

# SMS Configuration (for TAC codes - optional)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Compliance Settings
KYC_APPROVAL_AUTO=False
TAC_EXPIRY_MINUTES=5
TAC_MAX_ATTEMPTS=3
