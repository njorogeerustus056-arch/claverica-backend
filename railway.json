{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && python manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "cd /app/backend && PYTHONPATH=/app:/app/backend gunicorn backend.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --timeout 120",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  }
}
